<h1>New Post</h1>

<%= form_for @post do |f| %>
    <%= f.label "Title" %><br>
    <%= f.text_field :title %><br><br>
    <%= f.label "Content" %><br>
    <%= f.text_area :content %><br><br>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br><br>
    <%= f.fields_for :categories, post.categories.build do |cat_fields| %>
        <%= cat_fields.label :name, "Category" %>
        <%= cat_fields.text_field :name %>
    <% end %>
    <br><br>
    <%= f.submit %>
<% end %>
